<% if controller_name == 'issues' && action_name == 'show' %>
  <% content_for :header_tags do %>
    <%= stylesheet_link_tag 'tags.css', :plugin => 'redmine_issue_tags' %>
    <%= javascript_include_tag 'sidebar.js', :plugin => 'redmine_issue_tags' %>
  <% end %>

  <div id="tags-wrapper">

    <% if User.current.allowed_to?(:manage_private_tags, @issue.project) %>

      <% private_tags = @issue.owner_tags_on(User.current, :private_tags).pluck(:name) %>

      <div class="contextual">
        <a href="#" id="toggle-private-form">Add</a>
      </div>
      <h3>Private tags</h3>
      <div id="add-private-form" class="tags-form">
        <%= text_field_tag 'private_tag' %><%= submit_tag 'add', id: 'add_private', data: {url: private_tags_path, issue_id: @issue.id} %>
      </div>
      <div class="tags-inner-wrapper">
        <hr>
        <div class="tags-container" id="private-tags-container">
          <% private_tags.each do |tag| %>
            <a href="#" class="tag"><%= tag %></a>
          <% end %>
        </div>
        <!-- <hr> -->
      </div>

    <% end %>

    <% if User.current.allowed_to?(:view_public_tags, @issue.project) %>

      <% public_tags = @issue.tag_counts_on(:public_tags).pluck(:name, :taggings_count) %>

      <div class="contextual">
        <% if User.current.allowed_to?(:create_public_tags, @issue.project) %>
          <a href="#" id="toggle-public-form">Add</a>
        <% end %>
      </div>
      <h3>Public tags</h3>
      <div id="add-public-form" class="tags-form">
        <%= text_field_tag 'public_tag' %><%= submit_tag 'add', id: 'add_public', data: {url: public_tags_path, issue_id: @issue.id} %>
      </div>
      <div class="tags-inner-wrapper">
        <hr>
        <div class="tags-container" id="public-tags-container">
          <% public_tags.each do |tag, count| %>
            <a href="#" class="tag"><%= tag %> [<%= count %>]</a>
          <% end %>
        </div>
        <!-- <hr> -->
      </div>

    <% end %>

  </div>
<% end %>


